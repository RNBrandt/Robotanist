<section id="content">
  <div class="content-wrap">
    <div class="container clearfix">

      <% unless child_obj.scientific_name.split(' ').length >= 2 %>
        <h3><a id="re-carousel" href="/options/<%= option.id %>/continue">- Continue down the tree -</a></h3>
      <% end %>

      <div class="title-block">
        <h1><span><%= child_obj.scientific_name %></span></h1><span><%= child_obj.common_name %></span>
      </div>

      <% if image %>
        <div class="col-md-<%= col_width %>">
          <img src="<%= image %>">
          <% if image_credit %>
            <div><%= image_credit %></div>
          <% end %>
        </div>
      <% end %>

      <p><%= status %></p>

      <% description.split('. ').each do |attr| %>
        <div class="col-md-<%= col_width %> group-attr">
          <div class="fancy-title title-border bottommargin-sm">
          <h4><span><%= attr.split(': ')[0] %></span></h4>
          </div>
          <%= attr.split(': ')[1] %>
        </div>
      <% end %>
    </div>
  </div>

</section>